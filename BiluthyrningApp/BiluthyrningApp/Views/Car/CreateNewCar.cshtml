@model BiluthyrningApp.Models.Car

@{
    ViewData["Title"] = "CreateNewCar";
}

<h1>Skapa ny bil</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                    <label asp-for="CarSize" class="col-form-label"></label>
                    <select asp-for="CarSize" asp-items="ViewBag.carSizeOne" class="form-control"></select>
                <span asp-validation-for="CarSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicensePlate" class="control-label"></label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistanceInKm" class="control-label"></label>
                <input asp-for="DistanceInKm" class="form-control" />
                <span asp-validation-for="DistanceInKm" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
