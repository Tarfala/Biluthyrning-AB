@model Booking
@{
    ViewData["Title"] = "EndBooking";
}

<br /><br />
      <form method="post" asp-action="Payment">
          <h2 class="text-black text-center">Avsluta bokning</h2>
          <br />
          <div class="border border-dark rounded table-dark">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <br />
              <br />
              <div class="form-group row">
                  <div class="col-2">
                      <label asp-for="@Model.ReturnDateAndTime" class="col-form-label" value=""></label>
                  </div>
                  <div class="col-5">
                      <input asp-for="@Model.ReturnDateAndTime" class="form-control" />
                  </div>
                  <span asp-validation-for="@Model.ReturnDateAndTime" class="text-danger"></span>
              </div>
              <div class="form-group row">
                  <div class="col-2">
                      <label asp-for="@Model.Mileage" class="col-form-label"></label>
                  </div>
                  <div class="col-5">
                      <input asp-for="@Model.Mileage" class="form-control" />
                  </div>
                  <span asp-validation-for="@Model.Mileage" class="text-danger"></span>
              </div>
              <input asp-for="@Model.Id" type="hidden" />
              <input asp-for="@Model.BookingDateAndTime" type="hidden" />
              <input asp-for="Customer.SSN" type="hidden" />
              <input asp-for="Customer.FirstName" type="hidden" />
              <input asp-for="Customer.LastName" type="hidden" />
              <input asp-for="Car.CarSize" type="hidden" />
              <input asp-for="Car.LicensePlate" type="hidden" />
              <input asp-for="Car.DistanceInKm" type="hidden" />
              <div class="row">
                  <div class="col-5"></div>
                  <div class="form-group">
                      <input type="submit" class="btn btn-info form-control" value="Beräkna pris" />
                  </div>
              </div>
          </div>
      </form>
          @section Scripts {
              @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
          }
